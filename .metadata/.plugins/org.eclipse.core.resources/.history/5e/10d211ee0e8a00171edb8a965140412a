package trees;

public class SumLeftLeaves {
	public static void main(String[] args) {

	}
	
	int sum = 0;
	public int sumOfLeftLeaves(TreeNode root) {
		if(root == null){
			return 0;
		}
		if(root.left != null){
			if(root.left.left == null){
				sum +=root.left.val;
			}
			else sumOfLeftLeaves(root.left);
		}
		if(root.right != null){
			sumOfLeftLeaves(root.right);
		}
	}
}
